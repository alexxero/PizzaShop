<h2>Welcome to Pizza Shop</h2>

<div class="row">

<% @products.each do |p| %>
    <div class="col-md-3">
      <div>
        <b><%= p.title%></b>
      </div>

      <div>
        <img  src="<%= p.path_to_image%>" alt="Some Image" style="height: 200px; width: 200px;">
      </div>

      <div>
        <%= p.description%>
      </div>

      <div>
        Price: <%= p.price%> rub
      </div>

      <div>
        Size: <%= p.size%> cm
      </div>

    </div>
<% end %>

</div>
  <br />
<button class="btn btn-primary" onclick="something()">Click me!</button>
